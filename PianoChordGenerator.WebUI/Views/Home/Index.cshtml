        td {
            vertical-align: middle;
        }

        .canvas {
            border: 1px solid #d3d3d3;
            vertical-align: middle;
        }

        .radio {
            vertical-align: middle;
        }

        .dropdown {
            color: black;
            font-family: Arial, Helvetica, sans-serif;
        }

        .buttonstyle {
            color: black;
